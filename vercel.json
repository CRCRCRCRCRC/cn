{
  "version": 2,
  "builds": [
    { 
      "src": "vercel_app.py", 
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "vercel_app.py" }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  },
  "functions": {
    "vercel_app.py": {
      "maxDuration": 30
    }
  }
}